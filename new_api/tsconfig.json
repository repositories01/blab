{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "dom",
      "dom.iterable",
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "target": "es2019",
    "module": "commonjs", 
    "allowJs": true, 
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "baseUrl": "src",
    "paths": {
      "@/tests/*": [
        "../tests/*"
      ],
      "@/*": [
        "*"
      ]
    }
  }
}
